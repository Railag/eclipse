
@{
    Layout = null;
}
@model Eclipse.Models.ArticleItemModel
<div class="add-comment">
<form id="form3" action="@Url.Action("Index", "Home")" method="post" enctype="multipart/form-data">
    @Html.ValidationSummary()
    @Html.TextAreaFor(m => m.NewComment.Text, new { placeholder = "Write your comment here", @class = "txt-area"})
    @Html.TextBoxFor(m => m.NewComment.User.UserName, new { placeholder = "Name", @class = "textbox" }) 
    @Html.TextBoxFor(m => m.NewComment.User.Age, new { placeholder = "Age", @class = "textbox" })
    @Html.TextBoxFor(m => m.NewComment.User.Email, new { placeholder = "Email", @class = "textbox" })
    @Html.HiddenFor(m => m.NewComment.PostID)

    <div class="wrap-btn">
        <button class="btn-save">Add comment</button>
    </div>
</form>
</div>